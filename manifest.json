{
  "manifest_version": 3,
  "name": "ココナラ出品チェッカー",
  "version": "1.0",
  "description": "ココナラの出品サービスの記載内容が、禁止事項に該当しないかチェックします。",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": [
    "https://coconala.com/*",
    "https://tiger4th.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://coconala.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
